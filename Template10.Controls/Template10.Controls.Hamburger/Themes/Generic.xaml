<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:behaviors="using:Template10.Behaviors"
                    xmlns:controls="using:Template10.Controls"
                    xmlns:interactivity="using:Microsoft.Xaml.Interactivity">

    <Style TargetType="controls:HamburgerMenu">
        <Setter Property="AccentColor" Value="{ThemeResource SystemAccentColor}" />
        <Setter Property="VisualStateNarrowMinWidth" Value="-1" />
        <Setter Property="VisualStateNormalMinWidth" Value="-1" />
        <Setter Property="VisualStateWideMinWidth" Value="-1" />
    </Style>

</ResourceDictionary>

